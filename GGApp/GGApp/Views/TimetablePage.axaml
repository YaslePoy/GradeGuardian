<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:GGApp.ViewModels"
             xmlns:ggApp="clr-namespace:GGApp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GGApp.Views.TimetablePage" x:DataType="viewModels:TimetablePageViewModel">
    <Grid RowDefinitions="Auto *">
        <StackPanel Orientation="Vertical">
            <TextBlock DockPanel.Dock="Top" FontSize="40" Margin="20">Дневник</TextBlock>
            <StackPanel Margin="20" VerticalAlignment="Top" Spacing="10" Orientation="Horizontal">
                <Button>&lt;</Button>
                <Button>&gt;</Button>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Day}"></TextBlock>
                    <TextBlock Foreground="Blue" IsVisible="{Binding Today}">сегодня</TextBlock>
                </StackPanel>
                <Button Background="Transparent" Padding="0">
                    <Image Width="32" Source="../Assets/Calendar month.png"></Image>
                </Button>
            </StackPanel>
        </StackPanel>
        <DataGrid Grid.Row="1" DockPanel.Dock="Bottom" ItemsSource="{Binding TableData}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Время" Binding="{Binding LessonDay, StringFormat={}{}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Задание" Binding="{Binding Task}"></DataGridTextColumn>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Grade.Comment}"></DataGridTextColumn>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Grade.Value}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>